resource "aws_security_group" "vpc-ssh" {
  name        = "vpc-ssh-sg-${terraform.workspace}"
  description = "An ssh sec grp."
  ingress {
    cidr_blocks = ["0.0.0.0/0"]
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    description = "inbound 22"
  }
  egress {
    description = "All outbound"
    from_port   = 0
    to_port     = 0
    protocol    = -1
    cidr_blocks = ["0.0.0.0/0"]
  }
}
